int m=1e9+7;
	int perfectSum(int arr[], int n, int sum){
    	vector<int> prev(sum+1,0),cur(sum+1,0);
    	prev[0]=1;cur[0]=1;
    	for(int i=1;i<n+1;i++){
    		for(int j=0;j<sum+1;j++){
    			if(j-arr[i-1]>=0) cur[j]=(prev[j-arr[i-1]]+prev[j])%m;
    			else cur[j]=prev[j]%m;
    		}
    		prev=cur;
    	}
    	return prev[sum]%m;
	}
