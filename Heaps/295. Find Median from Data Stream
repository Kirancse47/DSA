class MedianFinder {
    priority_queue<int,vector<int>,greater<int>> mnh;
    priority_queue<int> mxh;
public:
    MedianFinder() {}
    void addNum(int num) {
        mnh.push(num);
        mxh.push(mnh.top());
        mnh.pop();
        if(mxh.size()<mnh.size()){
            mxh.push(mnh.top());
            mnh.pop();
        }
    }
    double findMedian() {
        if(mxh.size()==mnh.size()) return (mxh.top()+mnh.top())/2.0;
        else return mxh.top(); 
    }
};
